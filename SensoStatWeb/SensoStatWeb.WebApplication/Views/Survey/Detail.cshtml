@model SensoStatWeb.WebApplication.ViewModels.SurveyViewModel


<form class="surveyCreationDetailParent" asp-action="editSurvey" asp-controller="survey">

    <input asp-for="@Model.Survey.Name" type="hidden" />
    <input asp-for="@Model.Survey.Id" type="hidden" />

    <div class="titleSurvey">
        <h1 class="Title">Nom séance : <span>@Model.Survey.Name</span></h1>

        <h2>Status : <i class="fas fa-circle blueCircle"></i></h2>

    </div>

    <div style="width:100%" class="spacedButtons">
        <button onclick="addInput('instruction')" class="orangeRoundedButton doubleButton">Nouvelle instruction</button>
        <button onclick="addInput('question')" class="orangeRoundedButton doubleButton">Nouvelle question</button>
    </div>

    <input value="" type="hidden" name="orderInputs" id="orderInputs" />

    <ul id="sortlist">
        @foreach (var questionInstruction in Model.QuestionsInstructions)
            {
                <li class="roundedOrangeInput bigInput" draggable="true">
                    <p style="margin-top:auto;margin-bottom:auto">@questionInstruction.Title : </p>
                    <input value="@questionInstruction.Libelle" name="inputQuestionInstruction" placeholder="Ajouter une @questionInstruction.Title"/>
                    <i onclick="deleteInput(this)" name="questionsInstructionsBin" onclick="deleteInput" class="fas fa-trash-alt"></i>
                </li>
            }
    </ul>

    <section class="surveyButtons">
        <button class="orangeRoundedButton">Déployer séance</button>
        <button class="orangeRoundedButton">Supprimer le déploiement</button>
        <button class="orangeRoundedButton">Télécharger les liens</button>

        <button class="orangeRoundedButton">Télécharger données</button>
        <button class="orangeRoundedButton">Supprimer la séance</button>
    </section>

    <div style="margin-top:auto" class="spacedButtons" style="width:100%">
        <a asp-controller="surveys" asp-action="" style="background-color:transparent;color:#FF9D0A" class="orangeRoundedButton">Retour</a>
        <input type="submit" class="orangeRoundedButton" value="Créer" />
    </div>

    <script>
        window.addEventListener("DOMContentLoaded", () => {
            slist();
        });
    </script>
</form>